<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.kamsyview.core.HiltKamsyView
        android:id="@+id/avatar"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:avatarMargin="8dp"
        app:borderColor="?colorPrimary"
        app:borderColorSecondary="?colorError"
        app:borderWidth="4dp"
        app:kamsyShape="circle"
        android:fontFamily="@font/calligraffitti"
        app:kamsyStyle="material3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:statusIndicator="online"
        app:statusPosition="topRight"
        app:statusSize="16dp"
        app:textSizePercentage="1.1" />

</androidx.constraintlayout.widget.ConstraintLayout>
